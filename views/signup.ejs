    <div class="form-container">
        <div class="container">
            <form id="form" action="#">
                <div class="title">Sign Up</div>
                   <div class="user-details">
                       <div class="input-box">
                           <span class="details">Full Name</span>
                           <input id="full-name" name="fullName" type="text" placeholder="Enter your Full Name">
                           <div class="fullName err"></div>
                       </div>
                       <div class="input-box"> 
                            <span class="details">Username</span>
                            <input id="username" name="userName" type="text" placeholder="Enter your Username">
                            <div class="userName err"></div>
                        </div>
                        <div class="input-box">
                            <span class="details">Email</span> 
                            <input id="email" name="email" placeholder="Enter your email">
                            <div class="email err"></div>
                        </div>
                        <div class="input-box">
                            <span class="details">Tel Number</span> 
                            <input id="number" name="telNumber" type="text" placeholder="Enter your mobile number">
                            <div class="telNumber err"></div>
                        </div>
                        <div class="input-box">
                            <span class="details">Password</span>
                            <input id="password" name="password" type="password" placeholder="Enter a Password">
                            <div class="password err"></div>
                        </div>
                        <div class="input-box">
                            <span class="details">Confirm Password</span>
                            <input id="conf-password" name="confirmPassword" type="password" placeholder="Re-type your password">
                            <div class="confirmPassword err"></div>
                        </div>
                   </div>
                   <div class="button">
                       <input id="but" type="submit" name="submit" value="Sign Up">
                       <!-- <button id="but">Sign Up</button> -->
                   </div>
                   <p class="dir_login">if you already have an account <a href="login"> Login here</a></p>
                    
            </form>
        </div>
    </div> 
